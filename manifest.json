{
  "manifest_version": 2,

  "name": "Blocker",
  "description": "Blocks unwanted sites",
  "version": "1.0",

  "browser_action": {
    "default_icon": {
      "16": "images/icon16.png",
      "24": "images/icon24.png",
      "32": "images/icon32.png"
    },
    "default_title": "Blocker",
    "default_popup": "popup.html"
  },

  "options_page": "options.html",

  "background": {
    "scripts": ["js/events.js"],
    "persistent": true
  },

  "permissions": [
    "storage",
    "notifications",
    "webRequest",
    "webRequestBlocking",
    "http://*/*",
    "https://*/*"
  ]
}